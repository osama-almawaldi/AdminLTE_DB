@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    // layout="~/Views/Shared/_Layout2.cshtml";
}


<partial name="_NotificationsPartial" />

<div class="text-end">
    <a  asp-action="Create" class="btn btn-primary mb-3" >Create New</a>
</div>

<table class="table table-striped mb-3">

    <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
        
    @foreach(var category in Model)
    {
        <tr>
            <td>@category.Id</td>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>
                <a asp-action="Edit" asp-route-Id="@category.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-Id="@category.Id"  class="btn btn-danger">Delete</a>    
            </td>
        </tr>  

    }


        
    </tbody>


</table>