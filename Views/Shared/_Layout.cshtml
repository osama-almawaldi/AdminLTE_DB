@* /Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Osama Store</title>
    <style>
        /* Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background: #f5f5f5;
        }

        /* Header */
        header {
            position: sticky;
            top: 0;
            background: #0b1e3b;
            color: #fff;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 24px;
            z-index: 100;
            box-shadow: 0 2px 6px rgba(0,0,0,0.2);
        }

        header h1 {
            font-size: 1.5rem;
            font-weight: bold;
        }

        header nav button {
            margin-left: 10px;
            padding: 6px 14px;
            border: none;
            border-radius: 8px;
            background-color: #4fc3f7;
            color: #0b1e3b;
            font-weight: 600;
            cursor: pointer;
            transition: 0.3s;
        }

        header nav button:hover {
            background-color: #29b6f6;
        }

        /* Layout */
        .container {
            display: flex;
            flex: 1;
            background: #f5f5f5;
        }

        /* Sidebar */
        .sidebar {
            width: 220px;
            background: linear-gradient(#0b1e3b, #000);
            color: #fff;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .sidebar a {
            color: #4fc3f7;
            text-decoration: none;
            padding: 10px 12px;
            border-radius: 8px;
            transition: 0.3s;
        }

        .sidebar a:hover {
            background-color: #1a2a4a;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 20px;
            background: linear-gradient(#f9f9f9, #e0e0e0);
        }

        /* Footer */
        footer {
            background: #1a1a1a;
            color: #ccc;
            text-align: center;
            padding: 12px;
        }
    </style>
</head>
<body>
<header>
    <h1>Osama Store</h1>
    <nav>
        <button>Home</button>
        <button>About</button>
        <button>Contact</button>
    </nav>
</header>

<div class="container">
    <aside class="sidebar">
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Shop" asp-action="Index">Shop</a>
        <a asp-controller="Services" asp-action="Index">Services</a>
        <a href="#">Offers</a>
        <a href="#">Contact</a>
    </aside>

    <main class="main-content">
        @RenderBody()
    </main>
</div>

<footer>
    © 2025 Osama Store. All rights reserved.
</footer>
</body>
</html>