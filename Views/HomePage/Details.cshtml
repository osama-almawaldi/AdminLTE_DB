@model AdminLTE_DB.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";

}

<div class="container py-5">
    <div class="row">
        <div class="col-md-5">
            <img class="img-fluid rounded border" src="@Model.ImageUrl" alt="@Model.ProductName" />
        </div>
        <div class="col-md-7">
            <h2 class="mb-2">@Model.ProductName</h2>
            <div class="h4 text-success mb-3">$@Model.Price</div>
            <p class="text-muted">@Model.Description</p>

            <form asp-action="AddToCart" method="post" class="mt-4">
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="hidden" name="custId" value="@Context.Session.GetInt32("IdCustomer")" />

                <div class="input-group" style="max-width: 220px;">
                    <span class="input-group-text">الكمية</span>
                    <input type="number" class="form-control me-2" name="qty" />
                  
                    <button type="submit" class="btn btn-dark">أضف إلى السلة</button>
                </div>
                @Html.AntiForgeryToken()
            </form>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">عودة للمتجر</a>
            </div>
        </div>
    </div>
</div>