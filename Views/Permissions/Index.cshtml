@model IEnumerable<Permission>
@{
    ViewData["Title"] = "Permission";
    //Layout = "_Layout";
}




<partial name="_NotificationsPartial" />
<h1>Permission</h1>
<div class="container">

    <div class="d-flex justify-content-end align-items-center mb-3">
        <a asp-action="Create" class="btn btn-primary">Add Permission</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th> Id </th>
            <th> Employee Name </th>
            <th> Category Page</th>
            <th>Product Page </th>
            <th> Employee Page</th>
            <th> Actions </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Employee.FirstName</td>
                <td><input type="checkbox" checked="@p.IsCategory" disabled /></td>
                <td><input type="checkbox" checked="@p.IsProduct" disabled /></td>
                <td><input type="checkbox" checked="@p.IsEmployee" disabled /></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>