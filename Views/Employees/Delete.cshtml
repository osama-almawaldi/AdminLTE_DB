@model AdminLTE_DB.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<style>
    .crud-container { padding: 30px; display: flex; justify-content: center; }
    .form-card { background: #fff; padding: 30px; border-radius: 16px; box-shadow: 0 6px 14px rgba(0,0,0,0.15); width: 400px; text-align: center; }
    .form-card h2 { color: #e53935; margin-bottom: 20px; }
    .btn-delete, .btn-cancel { padding: 10px 20px; border-radius: 10px; font-weight: 600; border: none; cursor: pointer; margin: 5px; }
    .btn-delete { background: #e53935; color: #fff; }
    .btn-delete:hover { background: #d32f2f; }
    .btn-cancel { background: #ccc; color: #0b1e3b; }
    .btn-cancel:hover { background: #bbb; }
</style>

<div class="crud-container">
    <div class="form-card">
        <h2>Are you sure you want to delete this employee?</h2>
        <p><strong>@Model.FirstName @Model.LastName</strong></p>

        <form asp-action="Deletepost" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn-delete">Yes, Delete</button>
            <a asp-action="Index" class="btn-cancel">Cancel</a>
        </form>
    </div>
</div>