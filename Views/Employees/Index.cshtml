@model IEnumerable<AdminLTE_DB.Models.Employee>
@{
ViewData["Title"] = "Employees Management";
}

<style>
    .crud-container { padding: 30px; }
    h2 { text-align: center; color: #0b1e3b; margin-bottom: 25px; }

    /* Alerts */
    .alert { padding: 15px; border-radius: 12px; margin-bottom: 20px; text-align: center; font-weight: 600; }
    .alert-success { background: #4fc3f7; color: #0b1e3b; }
    .alert-error { background: #e53935; color: #fff; }
    .alert-warning { background: #ffc107; color: #0b1e3b; }

    /* Card Table */
    .card-table { background: #fff; border-radius: 16px; padding: 25px; box-shadow: 0 6px 14px rgba(0,0,0,0.15); margin-bottom: 30px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { padding: 12px 15px; border-bottom: 1px solid #ddd; text-align: left; }
    th { background: #0b1e3b; color: #fff; }
    tr:hover { background: #f4faff; }

    /* Buttons */
    .btn { padding: 8px 16px; border-radius: 10px; font-weight: 600; cursor: pointer; border: none; margin-right: 5px; transition: 0.3s; }
    .btn-add { background: #4fc3f7; color: #0b1e3b; }
    .btn-add:hover { background: #29b6f6; }
    .btn-edit { background: #ffc107; color: #0b1e3b; }
    .btn-edit:hover { background: #ffb300; }
    .btn-delete { background: #e53935; color: #fff; }
    .btn-delete:hover { background: #d32f2f; }
</style>

<div class="crud-container">
    <h2>Employees Management</h2>

    <!-- Alerts -->
    @if (TempData["Add"] != null) { <div class="alert alert-success">@TempData["Add"]</div> }
    @if (TempData["Update"] != null) { <div class="alert alert-warning">@TempData["Update"]</div> }
    @if (TempData["Remove"] != null) { <div class="alert alert-error">@TempData["Remove"]</div> }

    <!-- Add Button -->
    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-add">âž• Add Employee</a>
    </div>

    <!-- Employees Table -->
    <div class="card-table">
        <table>
            <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Username</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach(var emp in Model)
            {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.FirstName</td>
                <td>@emp.LastName</td>
                <td>@emp.Email</td>
                <td>@emp.Username</td>
                <td>@emp.Salary</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-edit">Edit</a>
                    <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-delete">Delete</a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
</div>