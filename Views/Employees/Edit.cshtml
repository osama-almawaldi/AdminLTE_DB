@model AdminLTE_DB.Models.Employee
@{
    ViewData["Title"] = "Edit Employee";
}

<style>
    /* نفس Create.cshtml */
    .crud-container { padding: 30px; display: flex; justify-content: center; }
    .form-card { background: #fff; padding: 30px; border-radius: 16px; box-shadow: 0 6px 14px rgba(0,0,0,0.15); width: 400px; }
    .form-card h2 { margin-bottom: 20px; color: #0b1e3b; text-align: center; }
    .form-card label { display: block; margin-bottom: 5px; font-weight: 600; color: #0b1e3b; }
    .form-card input { width: 100%; padding: 10px; margin-bottom: 15px; border-radius: 10px; border: 1px solid #ccc; }
    .btn-submit { background: #4fc3f7; color: #0b1e3b; padding: 10px 20px; border: none; border-radius: 10px; font-weight: 600; cursor: pointer; width: 100%; }
    .btn-submit:hover { background: #29b6f6; }
</style>

<div class="crud-container">
    <div class="form-card">
        <h2>Edit Employee</h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <label>First Name</label>
            <input asp-for="FirstName" required />
            <label>Last Name</label>
            <input asp-for="LastName" required />
            <label>Email</label>
            <input asp-for="Email" required type="email" />
            <label>Username</label>
            <input asp-for="Username" required />
            <label>Password</label>
            <input asp-for="Password" required type="password" />
            <label>Salary</label>
            <input asp-for="Salary" type="number" step="0.01" />
            <button type="submit" class="btn-submit">Update Employee</button>
        </form>
    </div>
</div>