@{
ViewData["Title"] = "Home";
}

<style>
    .center-container {
        height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .center-container h1 {
        color: #0b1e3b;
        margin-bottom: 30px;
        font-size: 2.5rem;
    }

    .btn-container {
        display: flex;
        gap: 25px;
    }

    .choice-btn {
        background: #0b1e3b;
        color: #fff;
        padding: 15px 40px;
        border-radius: 12px;
        font-size: 1.2rem;
        font-weight: 600;
        border: none;
        transition: 0.3s;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .choice-btn:hover {
        background: #4fc3f7;
        color: #0b1e3b;
        transform: translateY(-3px);
    }
</style>

<div class="center-container">
    <h1>Welcome to Osama Store</h1>
    <div class="btn-container">
        <form asp-controller="Shop" asp-action="Index" method="get">
            <button type="submit" class="choice-btn">🛍️ Shop</button>
        </form>
        <form asp-controller="Services" asp-action="Index" method="get">
            <button type="submit" class="choice-btn">🛠️ Services</button>
        </form>
    </div>
</div>